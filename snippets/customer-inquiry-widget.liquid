<script>
// Message Animation Controller
class MessageAnimator {
  constructor() {
    this.messages = document.querySelectorAll('.message-item');
    this.currentIndex = 0;
    this.isAnimating = false;
    this.interval = null;
    this.init();
  }

  init() {
    if (this.messages.length > 0) {
      this.startAnimation();
    }
  }

  startAnimation() {
    this.interval = setInterval(() => {
      this.nextMessage();
    }, 3000); // Change message every 3 seconds
  }

  nextMessage() {
    if (this.isAnimating) return;
    
    this.isAnimating = true;
    const current = this.messages[this.currentIndex];
    
    // Fade out current message
    current.style.animation = 'fadeOutDown 0.5s ease-in-out forwards';
    
    setTimeout(() => {
      current.classList.remove('active');
      this.currentIndex = (this.currentIndex + 1) % this.messages.length;
      const next = this.messages[this.currentIndex];
      
      // Fade in next message
      next.classList.add('active');
      next.style.animation = 'fadeInUp 0.5s ease-in-out forwards';
      
      setTimeout(() => {
        this.isAnimating = false;
        next.style.animation = '';
      }, 500);
    }, 500);
  }

  stop() {
    if (this.interval) {
      clearInterval(this.interval);
      this.interval = null;
    }
  }

  start() {
    if (!this.interval) {
      this.startAnimation();
    }
  }
}

// Initialize message animator
let messageAnimator;
document.addEventListener('DOMContentLoaded', function() {
  messageAnimator = new MessageAnimator();
});

// Widget Functions
function toggleWidget() {
  const popup = document.getElementById('widget-popup');
  const isVisible = popup.style.display === 'block';
  
  if (isVisible) {
    closeWidget();
  } else {
    popup.style.display = 'block';
    setTimeout(() => {
      popup.classList.add('show');
    }, 10);
    
    // Pause message animation when popup is open
    if (messageAnimator) {
      messageAnimator.stop();
    }
  }
}

function closeWidget() {
  const popup = document.getElementById('widget-popup');
  popup.classList.remove('show');
  
  setTimeout(() => {
    popup.style.display = 'none';
  }, 300);
  
  // Resume message animation when popup is closed
  if (messageAnimator) {
    messageAnimator.start();
  }
}

// Character Counter
document.addEventListener('DOMContentLoaded', function() {
  const textarea = document.querySelector('textarea[name="description"]');
  const charCount = document.getElementById('char-count');
  
  if (textarea && charCount) {
    textarea.addEventListener('input', function() {
      charCount.textContent = this.value.length;
    });
  }
});

// Form Submission
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('inquiry-form');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const submitBtn = document.getElementById('submit-btn');
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Sending...';
      submitBtn.disabled = true;
      
      // Get form data
      const formData = {
        name: this.name.value,
        contact: this.contact.value,
        email: this.email.value,
        query_type: this.query_type.value,
        description: this.description.value,
        timestamp: new Date().toISOString()
      };
      
      // Send to Google Sheets
      fetch('https://script.google.com/macros/s/AKfycbw6NsLsIZTcR_LAuvxTl2x1wtRkH3m4bIRVfiwds5gMVu7xsCrcJsOjAoeI0tQNsrptAg/exec', {
        method: 'POST',
        mode: 'no-cors',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData)
      }).then(() => {
        // Show success message
        const formElements = document.querySelectorAll('.form-group, .submit-btn');
        formElements.forEach(el => el.style.display = 'none');
        document.getElementById('success-message').style.display = 'block';
        
        // Reset form after 3 seconds
        setTimeout(() => {
          this.reset();
          document.getElementById('char-count').textContent = '0';
          formElements.forEach(el => el.style.display = '');
          document.getElementById('success-message').style.display = 'none';
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
          closeWidget();
        }, 3000);
      }).catch(() => {
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
        alert('Error sending message. Please try again.');
      });
    });
  }
});

// Close widget when clicking outside
document.addEventListener('click', function(e) {
  const widget = document.getElementById('customer-inquiry-widget');
  if (widget && !widget.contains(e.target)) {
    closeWidget();
  }
});
</script>