<!-- Customer Inquiry Widget with Animated Messages -->
<div id="customer-inquiry-widget" class="widget-container">
  <!-- Animated Widget Button -->
  <div id="widget-button" class="widget-btn" onclick="toggleWidget()">
    <div class="message-animation">
      <div class="message-item active">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
        </svg>
      </div>
      <div class="message-item">
        <span class="message-text">Need Bulk Orders?</span>
      </div>
      <div class="message-item">
        <span class="message-text">Corporate Gifting?</span>
      </div>
      {% comment %} <div class="message-item">
        {% comment %} <span class="message-text">Distributorship?</span> {% endcomment %}
      </div> {% endcomment %}
      
    </div>
  </div>

  <!-- Widget Popup -->
  <div id="widget-popup" class="widget-popup">
    <!-- Header -->
    <div class="popup-header">
      <h3>Looking for Bulk Orders?</h3>
      <div class="close-btn" onclick="closeWidget()">×</div>
    </div>

    <!-- Scrollable Form Container -->
    <div class="form-container">
      <!-- Form -->
      <form id="inquiry-form" class="inquiry-form">
        <div class="form-group">
          <label>Name *</label>
          <input type="text" name="name" required>
        </div>

        <div class="form-group">
          <label>Contact Number *</label>
          <input type="tel" name="contact" required>
        </div>

        <div class="form-group">
          <label>Email Address *</label>
          <input type="email" name="email" required>
        </div>

        <div class="form-group">
          <label>Type of Query *</label>
          <select name="query_type" required>
            <option value="">Select Query Type</option>
            <option value="Corporate Gifting">Corporate Gifting</option>
            <option value="Bulk Purchase">Bulk Purchase</option>
            <option value="Distributorship">Distributorship</option>
            <option value="Retailership">Retailership</option>
            <option value="Private/White Labelling">Private/White Labelling</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label>Description</label>
          <textarea name="description" maxlength="200" placeholder="Describe your inquiry (max 200 characters)"></textarea>
          <div class="char-counter">
            <span id="char-count">0</span>/200
          </div>
        </div>

        <button type="submit" id="submit-btn" class="submit-btn">Send Message</button>

        <div id="success-message" class="success-message">
          Thanks for reaching out! We’ll respond within 24 hours.
        </div>
      </form>
    </div>
  </div>
</div>

