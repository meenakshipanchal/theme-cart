{{ 'metaobject-slider.css' | asset_url | stylesheet_tag }}
{% liquid
  assign mobile_slider = true
  assign desktop_slider = true
  assign full_width = false
  if objectdata.count <= 2
    assign mobile_slider = false
  endif
  if objectdata.count <= 4
    assign desktop_slider = false
  endif
  unless quick_add
    assign quick_add = 'standard'
  endunless
%}
<slider-component class="slider-mobile-gutter page-width-desktop{% if full_width %} slider-component-full-width{% endif %}{% if mobile_slider == false %} page-width{% endif %}{% if desktop_slider == false and full_width == false %} page-width-desktop{% endif %}{% if desktop_slider %} slider-component-desktop{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <ul
    id="Slider-{{ section.id }}"
    data-id="{{ section.id }}"
    class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ columns_desktop }}-col-desktop grid--{{ columns_mobile }}-col-tablet-down{% if mobile_slider or desktop_slider %} slider{% if desktop_slider %} slider--desktop{% endif %}{% if mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
    role="list"
    aria-label="{{ 'general.slider.name' | t }}"
  >
    {% assign skip_card_product_styles = false %}
    {%- for variant_product in objectdata -%}
      <li
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        class="grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: {{ forloop.index }};"
        {% endif %}
      >
        {% if variant_product.product %}
        {% render 'variant-product',
          card_product: variant_product,
          product: variant_product.product,
          show_secondary_image: true,
          show_rating: true,
          skip_styles: skip_card_product_styles,
          section_id: section.id,
          quick_add: quick_add
        %}
        {% else %}
          {{  variant_product | image_url: width: 720 | image_tag: widths: '320,480,720', style: 'width: 100%;height:auto;border-radius:1rem', loading: load }}
        {% endif %}
      </li>
      {%- assign skip_card_product_styles = true -%}
    {%- endfor -%}
  </ul>
  {%- if mobile_slider or desktop_slider -%}
    <div class="slider-buttons">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter caption">
        <span class="slider-counter--current">1</span>
        <span aria-hidden="true"> / </span>
        <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
        <span class="slider-counter--total">{{ products_to_display }}</span>
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  {%- endif -%}
</slider-component>
