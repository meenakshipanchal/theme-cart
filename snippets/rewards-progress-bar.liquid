{% liquid
  assign free_shipping_threshold = 49900
  assign first_gift_threshold = 149900
  assign first_delivery = 499
  assign first_gift_value = 1499
  assign current_cart_total = cart.total_price

  assign shipping_reached = false
  assign gift_reached = false
  if current_cart_total >= free_shipping_threshold
    assign shipping_reached = true
  endif
  if current_cart_total >= first_gift_threshold
    assign gift_reached = true
  endif

  assign progress_percent = 0
  if gift_reached
    assign progress_percent = 100
  elsif shipping_reached
    assign diff = current_cart_total | minus: free_shipping_threshold
    assign range = first_gift_threshold | minus: free_shipping_threshold
    assign segment = diff | times: 100 | divided_by: range
    assign segment_half = segment | divided_by: 2
    assign progress_percent = 50 | plus: segment_half
  else
    if current_cart_total > 0
      assign progress_percent = current_cart_total | times: 50 | divided_by: free_shipping_threshold
    endif
  endif
%}

<div class="rpb-container" id="rewardsProgressBar">
  <!-- Dynamic Message Banner -->
  <div class="rpb-message" id="rpbMessage">
    {% if gift_reached %}
      <span class="rpb-msg-success">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M8 0C3.58 0 0 3.58 0 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm3.54 6.29l-4 4a.75.75 0 01-1.06 0l-2-2a.75.75 0 111.06-1.06L7 8.77l3.47-3.47a.75.75 0 111.06 1.06z" fill="#235A49"/></svg>
        You've unlocked FREE Shipping + FREE Surprise Gift!
      </span>
    {% elsif shipping_reached %}
      {% assign gift_remaining = first_gift_threshold | minus: current_cart_total | divided_by: 100 %}
      <span class="rpb-msg-progress">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M7 0C3.13 0 0 3.13 0 7s3.13 7 7 7 7-3.13 7-7S10.87 0 7 0zm.5 10.5h-1v-1h1v1zm0-2h-1v-5h1v5z" fill="#D4880F"/></svg>
        Add <strong>&#8377;{{ gift_remaining }}</strong> more to unlock a <strong>FREE Surprise Gift!</strong>
      </span>
    {% else %}
      {% assign ship_remaining = free_shipping_threshold | minus: current_cart_total | divided_by: 100 %}
      <span class="rpb-msg-progress">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M7 0C3.13 0 0 3.13 0 7s3.13 7 7 7 7-3.13 7-7S10.87 0 7 0zm.5 10.5h-1v-1h1v1zm0-2h-1v-5h1v5z" fill="#D4880F"/></svg>
        Add <strong>&#8377;{{ ship_remaining }}</strong> more to get <strong>FREE Shipping!</strong>
      </span>
    {% endif %}
  </div>

  <!-- Progress Track -->
  <div class="rpb-track-wrapper">
    <!-- Start dot -->
    <div class="rpb-start-dot {% if current_cart_total > 0 %}filled{% endif %}"></div>

    <!-- Track background -->
    <div class="rpb-track">
      <div class="rpb-track-fill" id="rpbTrackFill" style="width: {{ progress_percent }}%;"></div>
    </div>

    <!-- Milestone: Free Shipping -->
    <div class="rpb-milestone {% if shipping_reached %}reached{% endif %}" style="left: 50%;">
      <div class="rpb-milestone-icon">
        {% if shipping_reached %}
          <svg width="14" height="14" viewBox="0 0 14 10" fill="none"><path d="M1 5l4 4L13 1" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        {% else %}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13" rx="2"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
        {% endif %}
      </div>
      <span class="rpb-milestone-label">Free Shipping</span>
      <span class="rpb-milestone-value">&#8377;{{ first_delivery }}+</span>
    </div>

    <!-- Milestone: Free Gift -->
    <div class="rpb-milestone {% if gift_reached %}reached{% endif %}" style="left: 100%;">
      <div class="rpb-milestone-icon">
        {% if gift_reached %}
          <svg width="14" height="14" viewBox="0 0 14 10" fill="none"><path d="M1 5l4 4L13 1" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        {% else %}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 12 20 22 4 22 4 12"/><rect x="2" y="7" width="20" height="5"/><line x1="12" y1="22" x2="12" y2="7"/><path d="M12 7H7.5a2.5 2.5 0 010-5C11 2 12 7 12 7z"/><path d="M12 7h4.5a2.5 2.5 0 000-5C13 2 12 7 12 7z"/></svg>
        {% endif %}
      </div>
      <span class="rpb-milestone-label">Free Gift</span>
      <span class="rpb-milestone-value">&#8377;{{ first_gift_value }}+</span>
    </div>
  </div>
</div>

<style>
  .rpb-container {
    width: 100%;
    padding: 12px 16px 8px;
    background: linear-gradient(135deg, #f0faf5 0%, #e8f5ee 100%);
    border-bottom: 1px solid #e0ebe5;
  }

  /* Message Banner */
  .rpb-message {
    text-align: center;
    margin-bottom: 14px;
    animation: rpbFadeIn 0.4s ease;
  }

  .rpb-msg-success {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 12.5px;
    font-weight: 600;
    color: #235A49;
    background: rgba(35, 90, 73, 0.08);
    padding: 6px 14px;
    border-radius: 20px;
    font-family: 'Roboto Slab', serif;
    animation: rpbCelebrate 0.6s ease;
  }

  .rpb-msg-progress {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    font-size: 12px;
    font-weight: 500;
    color: #495057;
    font-family: 'Roboto Slab', serif;
  }

  .rpb-msg-progress strong {
    color: #235A49;
    font-weight: 700;
  }

  /* Track Wrapper */
  .rpb-track-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 20px;
    margin-bottom: 28px;
    height: 6px;
  }

  /* Start Dot */
  .rpb-start-dot {
    position: absolute;
    left: 12px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #d0d5dd;
    border: 2px solid #fff;
    z-index: 3;
    transition: background 0.4s ease;
  }

  .rpb-start-dot.filled {
    background: #235A49;
    box-shadow: 0 0 0 3px rgba(35, 90, 73, 0.15);
  }

  /* Track */
  .rpb-track {
    flex: 1;
    height: 5px;
    background: #d9e2dc;
    border-radius: 10px;
    overflow: hidden;
    position: relative;
  }

  .rpb-track-fill {
    height: 100%;
    background: linear-gradient(90deg, #235A49, #3a8f6e);
    border-radius: 10px;
    transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .rpb-track-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.25) 50%,
      transparent 100%
    );
    animation: rpbShimmer 2s infinite;
  }

  @keyframes rpbShimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* Milestones */
  .rpb-milestone {
    position: absolute;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 4;
  }

  .rpb-milestone-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    border: 2.5px solid #d0d5dd;
    color: #98a2b3;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
    margin-top: -13px;
  }

  .rpb-milestone.reached .rpb-milestone-icon {
    background: #235A49;
    border-color: #235A49;
    color: #fff;
    box-shadow: 0 3px 10px rgba(35, 90, 73, 0.3);
    transform: scale(1.1);
  }

  .rpb-milestone-label {
    margin-top: 6px;
    font-size: 11px;
    font-weight: 600;
    color: #6c757d;
    font-family: 'Roboto Slab', serif;
    white-space: nowrap;
    transition: color 0.3s ease;
  }

  .rpb-milestone.reached .rpb-milestone-label {
    color: #235A49;
    font-weight: 700;
  }

  .rpb-milestone-value {
    font-size: 10px;
    font-weight: 500;
    color: #98a2b3;
    font-family: 'Roboto Slab', serif;
    transition: color 0.3s ease;
  }

  .rpb-milestone.reached .rpb-milestone-value {
    color: #3a8f6e;
  }

  /* Animations */
  @keyframes rpbFadeIn {
    from { opacity: 0; transform: translateY(-4px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes rpbCelebrate {
    0% { transform: scale(0.9); opacity: 0; }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); opacity: 1; }
  }

  /* Responsive */
  @media (max-width: 480px) {
    .rpb-container {
      padding: 10px 12px 6px;
    }

    .rpb-track-wrapper {
      padding: 0 16px;
      margin-bottom: 26px;
    }

    .rpb-milestone-icon {
      width: 28px;
      height: 28px;
      margin-top: -11px;
    }

    .rpb-milestone-icon svg {
      width: 13px;
      height: 13px;
    }

    .rpb-milestone.reached .rpb-milestone-icon svg {
      width: 12px;
      height: 12px;
    }

    .rpb-milestone-label {
      font-size: 10px;
      margin-top: 5px;
    }

    .rpb-milestone-value {
      font-size: 9px;
    }

    .rpb-msg-success {
      font-size: 11px;
      padding: 5px 10px;
    }

    .rpb-msg-progress {
      font-size: 11px;
    }

    .rpb-start-dot {
      left: 8px;
      width: 7px;
      height: 7px;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const fill = document.getElementById('rpbTrackFill');
  if (fill) {
    fill.style.width = '0%';
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        fill.style.width = '{{ progress_percent }}%';
      });
    });
  }
});

window.updateCartRewards = function(cartTotal) {
  const freeShipping = {{ free_shipping_threshold }};
  const freeGift = {{ first_gift_threshold }};
  const total = cartTotal || {{ current_cart_total | default: 0 }};
  const fill = document.getElementById('rpbTrackFill');
  const msg = document.getElementById('rpbMessage');

  if (!fill) return;

  let pct = 0;
  let html = '';

  if (total >= freeGift) {
    pct = 100;
    html = '<span class="rpb-msg-success"><svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M8 0C3.58 0 0 3.58 0 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm3.54 6.29l-4 4a.75.75 0 01-1.06 0l-2-2a.75.75 0 111.06-1.06L7 8.77l3.47-3.47a.75.75 0 111.06 1.06z" fill="#235A49"/></svg>You\'ve unlocked FREE Shipping + FREE Surprise Gift!</span>';
  } else if (total >= freeShipping) {
    const diff = total - freeShipping;
    const range = freeGift - freeShipping;
    pct = 50 + (diff / range) * 50;
    const rem = Math.ceil((freeGift - total) / 100);
    html = '<span class="rpb-msg-progress"><svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M7 0C3.13 0 0 3.13 0 7s3.13 7 7 7 7-3.13 7-7S10.87 0 7 0zm.5 10.5h-1v-1h1v1zm0-2h-1v-5h1v5z" fill="#D4880F"/></svg>Add <strong>\u20B9' + rem + '</strong> more to unlock a <strong>FREE Surprise Gift!</strong></span>';
  } else {
    if (total > 0) {
      pct = (total / freeShipping) * 50;
    }
    const rem = Math.ceil((freeShipping - total) / 100);
    html = '<span class="rpb-msg-progress"><svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M7 0C3.13 0 0 3.13 0 7s3.13 7 7 7 7-3.13 7-7S10.87 0 7 0zm.5 10.5h-1v-1h1v1zm0-2h-1v-5h1v5z" fill="#D4880F"/></svg>Add <strong>\u20B9' + rem + '</strong> more to get <strong>FREE Shipping!</strong></span>';
  }

  fill.style.width = Math.min(100, Math.max(0, pct)) + '%';
  if (msg) msg.innerHTML = html;

  // Update milestone states
  document.querySelectorAll('.rpb-milestone').forEach(function(m) {
    var threshold = parseInt(m.style.left) === 50 ? freeShipping : freeGift;
    if (total >= threshold) {
      m.classList.add('reached');
    } else {
      m.classList.remove('reached');
    }
  });

  // Update start dot
  var dot = document.querySelector('.rpb-start-dot');
  if (dot) {
    if (total > 0) dot.classList.add('filled');
    else dot.classList.remove('filled');
  }
};
</script>
