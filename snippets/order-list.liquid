<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Main accordion logic for opening/closing order details
    const viewButtons = document.querySelectorAll('.btn-view-details, .btn-view-details-mobile');
    viewButtons.forEach((button) => {
      button.addEventListener('click', function (event) {
        event.preventDefault();
        const isMobile = this.classList.contains('btn-view-details-mobile');
        const orderWrapper = this.closest('.order-card, .table-row');
        const orderId = orderWrapper.dataset.orderId;
        const findIdFromPanel = (panel) => panel.id.match(/\d+$/)?.[0] || null;
        const detailsPanel = document.getElementById(
          isMobile ? `mobile-order-details-${orderId}` : `order-details-${orderId}`
        );
        const btnText = this.querySelector('.btn-text');

        document.querySelectorAll('.order-details-wrapper.is-visible').forEach((openPanel) => {
          if (openPanel !== detailsPanel) {
            openPanel.classList.remove('is-visible');
            const otherOrderId = findIdFromPanel(openPanel);
            if (otherOrderId) {
              const correspondingWrapper = document.querySelector(`[data-order-id="${otherOrderId}"]`);
              if (correspondingWrapper) {
                correspondingWrapper.classList.remove('card-is-active');
                const otherButton = correspondingWrapper.querySelector('[aria-expanded="true"]');
                if (otherButton) {
                  otherButton.setAttribute('aria-expanded', 'false');
                  if (otherButton.querySelector('.btn-text')) {
                    otherButton.querySelector('.btn-text').textContent = 'View';
                  }
                }
              }
            }
          }
        });

        const isVisible = detailsPanel.classList.toggle('is-visible');
        this.setAttribute('aria-expanded', isVisible);
        if (isMobile) {
          orderWrapper.classList.toggle('card-is-active', isVisible);
        }
        if (btnText) {
          btnText.textContent = isVisible ? 'Hide' : 'View';
        }
      });
    });

    // New logic for handling tabs within each mobile dropdown
    const allTabContainers = document.querySelectorAll('.mobile-details-container');
    allTabContainers.forEach((container) => {
      const tabButtons = container.querySelectorAll('.tab-button');
      const tabPanels = container.querySelectorAll('.tab-panel');

      tabButtons.forEach((button) => {
        button.addEventListener('click', (e) => {
          e.stopPropagation(); // prevent card from closing
          const targetPanelId = button.dataset.tabTarget;

          // Update button states
          tabButtons.forEach((btn) => btn.classList.remove('active'));
          button.classList.add('active');

          // Update panel visibility
          tabPanels.forEach((panel) => {
            if ('#' + panel.id === targetPanelId) {
              panel.classList.add('active');
            } else {
              panel.classList.remove('active');
            }
          });
        });
      });
    });
  });
</script>

