<section class="about-page">
  <div class="about-hero">
    <picture>
      <source media="(max-width: 768px)" srcset="{{ section.settings.hero_mobile | image_url }}">
      <img src="{{ section.settings.hero_desktop | image_url }}" alt="About Anveshan">
    </picture>
    <div class="about-hero-overlay">
      <div class="about-hero-content">
        <h1>{{ section.settings.hero_title }}</h1>
        <p>{{ section.settings.hero_subtitle }}</p>
      </div>
    </div>
  </div>

  <section style="background-:red" class="founders-section">
    <div style="background-:yellow" class="container">
      <div style="background-:blue" class="founders-wrapper">
        <div style="background-:green" class="founders-text">
          <h2>{{ section.settings.founder_heading }}</h2>
          <div style="background-:green" class="founder-content">
            {{ section.settings.founder_text }}
          </div>
          <div style="background-:orange" class="founders-image mobile-only">
            {% if section.settings.founder_img %}
              <img src="{{ section.settings.founder_img | image_url }}" alt="Founders">
            {% endif %}
          </div>
        </div>
        <div class="founders-image desktop-only">
          {% if section.settings.founder_img %}
            <img src="{{ section.settings.founder_img | image_url }}" alt="Founders">
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  <section class="way-section">
    <div class="container">
      <div class="way-wrapper">
        <div class="way-text">
          <h2>{{ section.settings.way_heading }}</h2>
          <div class="way-image mobile-only">
            {% if section.settings.way_img %}
              <img src="{{ section.settings.way_img | image_url }}" alt="The Anveshan Way">
            {% endif %}
          </div>
          <div class="way-content">
            {{ section.settings.way_text }}
          </div>
        </div>
        <div class="way-image desktop-only">
          {% if section.settings.way_img %}
            <img src="{{ section.settings.way_img | image_url }}" alt="The Anveshan Way">
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  <section class="fixing-section">
    <div class="container">
      <div class="fixing-wrapper">
        <div class="fixing-image desktop-only">
          {% if section.settings.fixing_img %}
            <img src="{{ section.settings.fixing_img | image_url }}" alt="What We're Fixing">
          {% endif %}
        </div>
        <div class="fixing-text">
          <h2>{{ section.settings.fixing_heading }}</h2>
          <div class="fixing-image mobile-only">
            {% if section.settings.fixing_img %}
              <img src="{{ section.settings.fixing_img | image_url }}" alt="What We're Fixing">
            {% endif %}
          </div>
          <div class="fixing-content">
            {{ section.settings.fixing_text }}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="values-section">
    <div class="">
      <div class="values-image-wrapper">
        <picture>
          <source
            media="(max-width: 768px)"
            srcset="https://cdn.shopify.com/s/files/1/0270/3346/9006/files/our_value_3.png?"
          >
          <img
            src="https://cdn.shopify.com/s/files/1/0270/3346/9006/files/our_value_2.png?"
            alt="{{ section.settings.values_heading }}"
            class="values-image"
          >
        </picture>
      </div>

      <div class="values-grid">
        {% for block in section.blocks %}
          {% if block.type == 'value' %}
            <div class="value-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon %}
                <div class="value-icon">
                  <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.label }}">
                </div>
              {% endif %}
              <p class="value-label">{{ block.settings.label }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="feature-section native-sourcing">
    <div class="container">
      <div class="feature-wrapper">
        <div class="feature-image desktop-only">
          {% if section.settings.native_img %}
            <img src="{{ section.settings.native_img | image_url }}" alt="Native Sourcing">
