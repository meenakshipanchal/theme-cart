            {% endif %}
          </div>
          <div class="feature-content">
            {{ section.settings.impact_text }}
          </div>
        </div>
        <div class="feature-image desktop-only">
          {% if section.settings.impact_img %}
            <img src="{{ section.settings.impact_img | image_url }}" alt="Impact We Make">
          {% endif %}
