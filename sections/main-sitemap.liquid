<style>
  .sitemap-container { padding: 2rem 0 5rem; }
  h1 { font-weight: 700; text-align: left; }
  .sitemap-section ul { display: flex; flex-flow: wrap; }
  .sitemap-section .collections li { flex: 0 0 25%; }
  .sitemap-section li { flex: 0 0 50%; padding-bottom: 5px; }
  .sitemap-section a { text-decoration: none; color: inherit; }
  .sitemap-section a:hover { text-decoration: none; font-weight: 600; }
  .sitemap-section a small { display: block; opacity: 0.7; }
  @media (max-width: 1100px) { .sitemap-section .collections li { flex: 0 0 33%; } }
  @media (max-width: 700px) { .sitemap-section .collections li { flex: 0 0 50%; } .sitemap-section li { flex: 0 0 100%; } .sitemap-container h1 { font-size: 21px; } .sitemap-container h3 { margin-bottom: 8px; font-size: 17px; } }
  @media (max-width: 480px) { .sitemap-section .collections li { flex: 0 0 50%; } }
</style>
<div class="container sitemap-container">
    <h1 class="h3">Anveshan Sitemap</h1>
    <div id="products" class="sitemap-section">
      <div class="row">
          <h3>Info Links</h3>
      <ul class="collections">
        <li><a href="{{ shop.url }}/pages/about-us">Our Story</a></li>
        <li><a href="{{ shop.url }}/pages/contact-us">Contact Us</a></li>
        {% assign menu = linklists['policies'] %}
         {% for link in menu.links %}
           {% if link.title != 'Sitemap' %}
             <li><a href="{{link.url}}">{{ link.title }}</a></li>
           {% endif %}
         {%- endfor -%}
		</ul>
      </div>
      
      <div class="row">
          <h3>Collections</h3>
      <ul class="collections">
        {% assign menu = linklists['main-menu'] %}
         {% for link in menu.links %}
           {% if link.url contains 'collections' or link.url contains 'festive-gift-boxes' or link.url contains 'build-your-own-sampler-kit' %}
             <li><a href="{{link.url}}">{{ link.title }}</a></li>
          {% elsif link.links %}
             {% for link in link.links %} {% if link.url contains 'collections' %}
               {% assign linkh = link.url | split: "/" %}
               <li><a href="{{link.url}}">{{ collections[linkh.last].title }}</a></li> {% endif %}
              {% endfor %}
          {% endif %}
           
         {%- endfor -%}
		</ul>
      </div>
      <div class="row">
        <h3>Products</h3>
        <ul class="products">
          {%- for product in collections['all-products'].products -%}
            <li><a href="{{ product.url }}">{{ product.title }}
              {% if product.variants.size > 1 %}<small>({% for v in product.variants %}{{ v.title }}{% unless forloop.last %}, {% endunless %}{% endfor %})</small>{% endif %}
            </a></li>
          {%- endfor -%}
         </ul>
       </div>
      
      <div class="row">
        <h3>Medicinal Recipes</h3>
        <ul class="blogs">
          {% for article in blogs['medicinal-recipes'].articles %}
            <li><a href="{{ article.url }}">{{ article.title }}</a></li>
          {%- endfor -%}
          </ul>
        <h3>Healthy Recipe</h3>
        <ul class="blogs">
          {% for article in blogs['recipes'].articles %}
            <li><a href="{{ article.url }}">{{ article.title }}</a></li>
          {%- endfor -%}
          </ul>
        <h3>Anveshan Blogs</h3>
        <ul class="blogs">
          {% for article in blogs['anveshan-blog'].articles %}
            <li><a href="{{ article.url }}">{{ article.title }}</a></li>
          {%- endfor -%}
          </ul>
        </div>

    </div>
</div>
{% schema %}
  {
    "name": "Section name",
    "class":"page-width",
    "settings": []
  }
{% endschema %}