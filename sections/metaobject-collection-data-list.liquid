{{ 'metaobject-collection.css' | asset_url | stylesheet_tag }}
{{ 'variant-card.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section > slider-component:last-child {
      margin-bottom: 20px;
    }
    slider-component + .media-banner {
      margin-top: 20px;
    }
  }
{%- endstyle -%}

{% assign product_list = collection.metafields.custom.template.value  %}
{% for objbundle in product_list.blocks.value %}
  {% case objbundle.system.type %}
    {% when 'product_variants' %}
      {% render 'metaobject-slider', objectdata: objbundle.product.value, columns_mobile: 2, columns_desktop: 4 %}
    {% when 'collection_content' %}
      <div class="page-width">
        <h2>{{ objbundle.title.value }}</h2>
      </div>
    {% when 'bundle_banner' %}
      <div class="page-width-desktop media-banner{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <picture>
          <source media="(max-width:749px)" srcset="{{ objbundle.image.value | image_url: width: 720 }}">
          <source media="(min-width:750px)" srcset="{{ objbundle.desk_image.value | image_url: width: 2400 }}">
          <img src="{{ objbundle.image.value | image_url: width: 300 }}" alt="" style="width:auto;max-width:100%;" width="" height="" />
        </picture>
      </div>
    {% when 'collection_banner' %}
      {% if objbundle.title.value  %}
        <div class="page-width">
          <h2>{{ objbundle.title.value }}</h2>
        </div>
      {% endif %}
      {% assign banners = objbundle.banners.value %}
      {% if banners.count == 1 %}
        {% if objbundle.desktop_banner.value %}
          {% for banner in banners %}
            <div class="page-width-desktop media-banner{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              <picture>
                {% if objbundle.desktop_banner.value %}
                  <source media="(min-width:750px)" srcset="{{ objbundle.desktop_banner.value | image_url: width: 1500 }}">
                {% endif %}
                {{  banner | image_url: width: 720 | image_tag: widths: '320,480,720', style: 'width: 100%;height:auto', loading: 'lazy' }}
              </picture>
            </div>
          {% endfor %}
        {% endif %}
      {% else %}
        {% liquid
          assign load = 'lazy'
          if forloop.index < 3
            assign load = 'eager'
          endif
        %}
        {% render 'metaobject-slider', objectdata: objbundle.banners.value, columns_mobile: 1, columns_desktop: objbundle.banners.value.count, load: load %}
      {% endif %}
  {% endcase %}
{% endfor %}

