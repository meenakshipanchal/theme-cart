{%- style -%}
  /* Cart Items Table - ONLY for main cart page, not drawer */
  cart-items .cart-items {
    border-collapse: separate !important;
    border-spacing: 0 16px !important;
    background-color: transparent !important;
  }

  cart-items .cart-items tbody {
    background-color: transparent !important;
  }

  /* Cart Item Row - ONLY for main cart page */
  cart-items .cart-item {
    border: 1.5px solid #D3D3D3 !important;
    border-radius: 12px !important;
    display: table-row !important;
    /* transition: box-shadow 0.3s ease !important; */
  }

  /* Cart Item Cells - ONLY for main cart page */
  cart-items .cart-item td {
    padding: 16px !important;
    border: none !important;
    vertical-align: middle !important;
  }

  cart-items .cart-item td:first-child {
    border-radius: 12px 0 0 12px !important;
    border-left: 1.5px solid #D3D3D3 !important;
  }

  cart-items .cart-item td:last-child {
    border-radius: 0 12px 12px 0 !important;
    border-right: 1.5px solid #D3D3D3 !important;
  }

  /* Top and bottom borders for all cells */
  cart-items .cart-item td {
    border-top: 1.5px solid #D3D3D3 !important;
    border-bottom: 1.5px solid #D3D3D3 !important;
  }

  /* Product Image Styling */
  cart-items .cart-item__media {
    width: 150px !important;
    min-width: 150px !important;
  }

  cart-items .cart-item__image-container {
    border-radius: 8px !important;
    overflow: hidden !important;
  }

  /* Product Details */
  cart-items .cart-item__details {
    padding-right: 20px !important;
    vertical-align: top !important;
  }

  cart-items .cart-item__name {
    font-size: 16px !important;
    font-weight: 600 !important;
    color: #181725 !important;
    margin-bottom: 8px !important;
    line-height: 1.4 !important;
  }

  cart-items .product-option {
    font-size: 14px !important;
    color: #666 !important;
    margin-bottom: 4px !important;
  }

  /* Quantity Section */
  cart-items .cart-item__quantity {
    min-width: 120px !important;
    text-align: right !important;
    vertical-align: middle !important;
    padding-top: 24px !important;
  }

  /* Price Section */
  cart-items .cart-item__totals {
    min-width: 100px !important;
    text-align: right !important;
  }

  /* IMPORTANT: Hide mobile-only sections on desktop */
  cart-items .cart-item__details .mobile-quantity-wrapper,
  cart-items .cart-item__details .mobile-price-wrapper {
    display: none !important;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Empty Cart Styling */
  .empty-cart-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    animation: fadeIn 1s ease-out;
    padding: 40px 20px;
    min-height: 60vh;
    height: 100%;
    position: relative;
  }

  .cart-image {
    width: 240px;
    height: 240px;
    object-fit: contain;
    margin-bottom: 20px;
    animation: bounceIn 1s ease;
  }

  .main-text {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 6px;
    animation: fadeInUp 1s ease forwards;
    color: #235A49;
    text-align: center;
  }

  .sub-text {
    font-size: 14px;
    font-weight: 400;
    color: #4A7D69;
    margin-bottom: 18px;
    animation: fadeInUp 1.2s ease forwards;
    text-align: center;
  }

  .continue-button {
    background: linear-gradient(90deg, #1abc9c, #16a085);
    padding: 12px 24px;
    border: none;
    color: white;
    font-size: 14px;
    font-weight: 500;
    border-radius: 25px;
    cursor: pointer;
    animation: fadeInUp 1.4s ease forwards;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s ease;
  }

  .continue-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 188, 156, 0.3);
  }

  /* Cart Details Header */
  .cart-details-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    border-bottom: 1px solid #E5E5E5;
    margin-bottom: 16px;
  }

  .cart-details-header h2 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #235A49;
    font-family: 'Roboto Slab', serif;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .total-items-count {
    font-size: 16px;
    color: #404040;
    font-weight: 400;
    font-family: 'Roboto Slab', serif;
  }

  /* Add More Items Button */
  .add-more-items-container {
    padding: 16px 0;
    display: flex;
    justify-content: flex-start;
    margin-bottom: 20px;
  }

  .add-more-items-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border: 2px solid #235A49;
    border-radius: 25px;
    background: transparent;
    color: #235A49;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    font-family: 'Roboto Slab', serif;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .add-more-items-btn:hover {
    background: #235A49;
    color: #fff;
    transform: translateY(-1px);
    /* box-shadow: 0 4px 12px rgba(35, 90, 73, 0.2); */
  }

  .add-more-items-btn:hover svg {
    transform: translateX(2px);
  }

  .add-more-items-btn svg {
    transition: transform 0.2s ease;
  }

  /* Coupon Section Styling */
  .coupon-section {
    border-radius: 8px;
  }

  @keyframes bounceIn {
    0% { transform: scale(0.5); opacity: 0; }
    60% { transform: scale(1.1); opacity: 1; }
    100% { transform: scale(1); }
  }

  @keyframes fadeInUp {
    0% { transform: translateY(20px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
  }

  @keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

