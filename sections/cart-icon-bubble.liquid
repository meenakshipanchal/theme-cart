{% liquid
  assign real_item_count = 0
  for item in cart.items
    unless item.properties._freebie
      assign real_item_count = real_item_count | plus: item.quantity
    endunless
  endfor
%}
{% if real_item_count == 0 %}
  <span class="svg-wrapper">{{ 'icon-cart-empty.svg' | inline_asset_content }}</span>
{% else %}
  <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
{% endif %}

<span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
{%- if real_item_count > 0 -%}
  <div class="cart-count-bubble">
    {%- if real_item_count < 100 -%}
      <span aria-hidden="true">{{ real_item_count }}</span>
    {%- endif -%}
    <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: real_item_count }}</span>
  </div>
{%- endif -%}
