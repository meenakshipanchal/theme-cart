<style>
  .image-with-content ul {
    padding: 0;
    list-style: none;
  }
  .image-with-content .motion-reduce {
    width: 100%;
    height: auto;
    display: block;
  }
  .image-with-content li {
    display: flex;
    justify-content: space-between;
  }
  .image-with-content figure {
    margin: 0;
    flex: 0 0 44%;
    border: solid 4px #fff;
    box-shadow: 0px 4px 4px 0px #00000040;
  }
  .image-with-content h2 {
    text-align: center;
  }
  .image-with-content h2, .image-with-content h4{
    color: #235A49;
    font-weight: 700;
  }
  .image-with-content h4 {
    margin: 0;
  }
  .image-with-content p {
    margin-bottom: 0;
    margin-top: 6px;
    line-height: 1.4;
  }
  #product_Uses {
    padding-top: 1px;
  }
  @media (max-width: 580px) {
    .image-with-content li:nth-child(2n) {
      flex-direction: row-reverse;
    }
  }
  @media (max-width: 980px) {
    .image-with-content div {
      flex: 0 0 50%;
      align-self: center;
    }
  }
  @media (max-width: 980px) and (min-width: 581px) {
    .image-with-content ul {
      display: flex;
      flex-wrap: wrap;
    }
    .image-with-content li {
      flex: 0 0 50%;
      padding: 5px 10px;
      
    }
    .image-with-content li:nth-child(3), .image-with-content li:nth-child(4) {
      flex-direction: row-reverse;
    }
  }
  @media (min-width: 981px) {
    .image-with-content ul {
      display: flex;
      flex-wrap: wrap;
    }
    .image-with-content .motion-reduce {
      display: block;
    }
    .image-with-content li {
      flex: 20%;
      flex-direction: column;
      padding: 5px 10px;
    }
    .image-with-content li:nth-child(2n) {
      flex-direction: column-reverse;
    }
    .image-with-content li:nth-child(2n) div {
      padding-bottom: 15px;
    }
  }
</style>
<div class="page-width" id="product_Uses">
  <h2>{{ section.settings.title }}</h2>
  <ul>
    {% for block in section.blocks %}
      <li>
        <figure>
          {{ block.settings.image | image_url: width: '720px' | image_tag: widths: '360,480,720', class: 'motion-reduce', loading: 'lazy' }}
        </figure>
        <div>
          <h4>{{ block.settings.heading }}</h4>
          <p>{{ block.settings.content }}</p>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
{% schema %}
  {
    "name": "Image With Content",
    "tag": "section",
    "class": "image-with-content",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "limit": 8,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "inline_richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image With Content"
      }
    ]
  }
{% endschema %}